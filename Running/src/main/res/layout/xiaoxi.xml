<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.running.myviews.TopBar
        android:id="@+id/xiaoxi_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isLeftTextShow="true"
        app:isMidTextShow="true"
        app:isRightImageShow="true"
        app:isRightTextShow="true"
        app:leftImage="@mipmap/ic_launcher"
        app:leftText="聊天"
        app:midText="|"
        app:rightImage="@mipmap/ic_launcher"
        app:rightText="好友"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/xiaoxiViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>