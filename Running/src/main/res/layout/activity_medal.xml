<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical">

    <com.running.myviews.TopBar
        android:id="@+id/medal_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        app:isRightImageShow="true"
        app:leftImage="@drawable/back"
        app:leftText="勋章"
        app:rightImage="@drawable/share"/>

    <ScrollView
        android:id="@+id/medal_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已获得"
                android:textSize="20sp"/>

            <com.running.myviews.MyGridView
                android:id="@+id/medal_have"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:horizontalSpacing="2dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="未获得"
                android:textSize="20sp"/>

            <com.running.myviews.MyGridView
                android:id="@+id/medal_nothave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:horizontalSpacing="2dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
