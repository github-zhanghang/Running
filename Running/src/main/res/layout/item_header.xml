<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ndroid="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <io.rong.imkit.widget.AsyncImageView

            android:id="@+id/item_header_tx"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:src="@drawable/rc_default_portrait" />
        <TextView
            android:text="新的好友"
            android:id="@+id/item_header_name"
            android:textSize="16sp"
            android:textColor="#353535"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/item_header_tx" />
        <ImageView
            android:id="@+id/redPoint"
            android:visibility="invisible"
            android:src="@mipmap/redpoint"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"/>
    </RelativeLayout>
    <View

        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#998181" />
</LinearLayout>