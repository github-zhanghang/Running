<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.running.android_main.UpdatePasswordActivity">

    <com.running.myviews.TopBar
        android:id="@+id/update_password_topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        app:leftImage="@drawable/ic_back"
        app:leftText="修改密码">
    </com.running.myviews.TopBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/update_pw_headImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/update_pw_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桃子"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/update_pw_oldPW"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editbox_background_focus_yellow"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/update_pw_newPW"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editbox_background_focus_yellow"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/update_pw_confirmNewPW"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editbox_background_focus_yellow"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/update_pw_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="确定"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/update_pw_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="取消"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
