<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/__picker_item_photo_border_selected"
                android:layout_height="80dp">
    <ImageView
        android:id="@+id/item_nearby_portrait"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:padding="5dp"
        android:src="@drawable/rc_default_portrait" />

    <TextView
        android:id="@+id/item_nearby_username"
        android:text="依山观澜"
        android:textSize="16sp"
        android:textColor="#353535"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/item_nearby_portrait" />

    <TextView
        android:id="@+id/item_nearby_distance"
        android:textSize="16sp"
        android:text="200米"
        android:textColor="#353535"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:gravity="center" />
</RelativeLayout>