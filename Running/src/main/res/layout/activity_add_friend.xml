<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.running.myviews.TopBar
        android:id="@+id/friendadd_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        app:leftImage="@drawable/back"
        app:leftText="添加好友"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.running.myviews.edittextwithdeel.EditTextWithDel
            android:id="@+id/addFirend_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/editbox_background_focus_yellow"
            android:hint="请输入账号"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="addNewFriend"
            android:text="搜索"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:onClick="searchNearby">

        <ImageView
            android:id="@+id/fujin"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:src="@drawable/rc_default_portrait"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/fujin"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="搜附近"
            android:textColor="#353535"
            android:textSize="16sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="3dp"
        android:background="#998181"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:onClick="searchWithConditions">

        <ImageView
            android:id="@+id/chazhao"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:src="@drawable/rc_default_portrait"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/chazhao"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="按条件查找"
            android:textColor="#353535"
            android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>