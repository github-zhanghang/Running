<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_conFriend_portrait"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_person" />
    <TextView
        android:id="@+id/item_conFriend_username"
        android:layout_marginTop="5dp"
        android:text="灼灼其华"
        android:textSize="16sp"
        android:textColor="#353535"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_conFriend_portrait"
        android:layout_toEndOf="@+id/item_conFriend_portrait"/>
    <TextView

        android:layout_marginLeft="32dp"
        android:id="@+id/item_conFriend_sex"
        android:text="男"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:textColor="#80353535"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/item_conFriend_username"
        android:layout_toRightOf="@+id/item_conFriend_portrait"
        android:layout_toEndOf="@+id/item_conFriend_portrait"/>

    <TextView

        android:layout_marginLeft="3dp"
        android:id="@+id/item_conFriend_age"
        android:text="23岁"
        android:textSize="13sp"
        android:textColor="#80353535"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignTop="@+id/item_conFriend_sex"
        android:layout_toRightOf="@+id/item_conFriend_sex"
       />
    <TextView
        android:id="@+id/item_conFriend_address"
        android:text="北京 北京 朝阳"
        android:textSize="15sp"
        android:textColor="#80353535"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:singleLine="true" android:ellipsize="end"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" android:layout_centerVertical="true"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>