<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--头像-->
    <ImageView
        android:id="@+id/dynamic_img_item_head_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@drawable/head_photo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <!--用户名-->
            <TextView
                android:id="@+id/dynamic_img_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无名"
                android:textColor="#5563d2"
                android:textSize="25sp"/>
            <!--时间-->
            <TextView
                android:id="@+id/dynamic_img_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="04-01 07:05"
                android:textColor="#cac6c6"
                android:textSize="18sp"/>

        </LinearLayout>
        <!--动态文本内容-->
        <TextView
            android:id="@+id/dynamic_img_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="四月，你好"
            android:textSize="20sp"/>
        <!--动态图片-->
        <com.running.myviews.ninegridview.NineGridView
            android:id="@+id/dynamic_img_item_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ngv_mode="grid"
            app:ngv_singleImageRatio="1"
            app:ngv_singleImageSize="250dp"/>

        <!--动态底部-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="4"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dynamic_img_item_location_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/location"/>
                <!--赞数-->
                <TextView
                    android:id="@+id/dynamic_img_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="苏州市"
                    android:textSize="15sp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="3">
                <!--下方赞布局-->
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp">
                    <!--赞图标-->
                    <ImageView
                        android:id="@+id/dynamic_img_item_praise_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/praise"/>
                    <!--赞数-->
                    <TextView
                        android:id="@+id/dynamic_img_item_praise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="18"
                        android:textSize="20sp"/>
                </LinearLayout>
            <!--下方评论布局-->
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <!--评论图标-->
                    <ImageView
                        android:id="@+id/dynamic_img_item_comment_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/comment"/>
                    <!--评论数-->
                    <TextView
                        android:id="@+id/dynamic_img_item_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="4"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>