<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/faxian_item_gameImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/game"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center">

        <TextView
            android:id="@+id/faxian_item_gameName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="2016扬州鉴真国际半程马拉松赛"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/faxian_item_gameAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="江苏扬州"
            android:textSize="20sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center">

        <TextView
            android:id="@+id/faxian_item_gameTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒计时:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/faxian_item_gameTime"
            android:text="0"
            android:textColor="#ff0000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/singer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/faxian_item_gameBrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/singer_textview"
            android:text="浏览量:"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#00000000"
        android:focusable="false"/>
</LinearLayout>